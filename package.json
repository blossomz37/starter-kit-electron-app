{
  "name": "starter-kit-electron-app",
  "version": "1.0.0",
  "description": "This is a starter kit that for an electron app that uses Vite, Typescript, Tailwind and Shadcn UI.",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:renderer": "vite build",
    "build:main": "esbuild src/main.ts --bundle --platform=node --outfile=dist/main.js --external:electron --format=esm",
    "build": "npm run build:renderer && npm run build:main",
    "start": "npm run build && electron . --no-sandbox",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "esbuild": "^0.19.0",
    "electron": "^28.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
